<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_item_contest"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_green_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Question 1"
        app:layout_constraintBottom_toBottomOf="@id/imgCheck"
        app:layout_constraintLeft_toRightOf="@id/imgCheck"
        app:layout_constraintTop_toTopOf="@id/imgCheck" />
    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/tvponit"
        android:text="point"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/imgCheck"
        app:layout_constraintTop_toTopOf="@id/imgCheck"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@id/imgCheck"
        app:layout_constraintTop_toTopOf="@id/imgCheck"
        android:textColor="@color/yeallow_color_huy"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/tvponit"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>