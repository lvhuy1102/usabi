<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailsPointActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_item_contest"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <TextView
        android:id="@+id/tview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_star_yeallow_24dp"
        android:gravity="center"
        android:text="Reedeemable Points"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/tvAmountPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="255"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tview"
        app:layout_constraintRight_toRightOf="@+id/tview"
        app:layout_constraintTop_toBottomOf="@+id/tview" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/tvAmountPoint" />

    <TextView
        android:id="@+id/tvUserPoint"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_margin="@dimen/_16dp"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:gravity="center"
        android:text="Use Point to Contest"
        app:layout_constraintLeft_toLeftOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/tvPurchasepoint"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/span24"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
        android:gravity="center"
        android:text="Purchase more Point"
        app:layout_constraintBottom_toTopOf="@+id/tvExchanragePoint"
        app:layout_constraintLeft_toLeftOf="@+id/tvUserPoint"
        app:layout_constraintTop_toBottomOf="@+id/tvUserPoint" />

    <TextView
        android:id="@+id/tvExchanragePoint"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/span24"
        android:layout_marginBottom="16dp"
        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"

        android:gravity="center"
        android:text="Exchange rewards points"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="@+id/tvUserPoint"
        app:layout_constraintTop_toBottomOf="@+id/tvPurchasepoint" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:tabGravity="fill"
        app:tabIndicatorHeight="1dp"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"></android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>