<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/fr_club_Detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_admob"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_horizontal"
        android:paddingRight="@dimen/padding_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical">

            <!--<ImageView-->
            <!--android:id="@+id/img_club_detail"-->
            <!--android:layout_width="@dimen/width_logo_club_info"-->
            <!--android:layout_height="@dimen/height_logo_club_info"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginBottom="@dimen/margin_vertical"-->
            <!--android:layout_marginTop="@dimen/margin_vertical" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_horizontal_large"
                android:layout_marginRight="@dimen/margin_horizontal_large"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="@string/text_played"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/lbl_value_played"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="38"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:text="@string/text_win"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/lbl_value_win"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="26"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="@string/text_goal_difference"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/lbl_value_goal_difference"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="23"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:text="@string/text_draw"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/lbl_value_draw"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="6"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:text="@string/text_point"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/lbl_value_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="84"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:text="@string/text_lose"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/lbl_value_lose"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="6"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:layout_marginLeft="@dimen/margin_horizontal_large"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_marginTop="@dimen/margin_vertical"
            android:background="@color/line_divider" />

        <TextView
            android:layout_marginLeft="@dimen/margin_horizontal_large"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_club_information"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_large" />

        <ScrollView
            android:layout_marginLeft="@dimen/margin_horizontal_large"
            android:layout_marginRight="@dimen/margin_horizontal_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_established"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/text_established"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/lbl_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/text_manager"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/lbl_nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/text_nickname"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/lbl_stadium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:text="@string/text_stadium"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_view_club_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical_xlarge"
            android:background="@drawable/bg_radius_blue_light"
            android:paddingLeft="@dimen/margin_vertical_xlarge"
            android:paddingRight="@dimen/margin_vertical_xlarge"
            android:text="@string/text_view_detail"
            android:textColor="@color/yellow_dark"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_admob"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_admob"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:orientation="vertical" />

</FrameLayout>