<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Welcome to the con test page of :"
        android:textColor="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />\

    <TextView
        android:id="@+id/tvMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LIVERPOOL FC VS TOTHENHAM HOSPUR"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_red_contest"
        app:layout_constraintTop_toBottomOf="@id/tvMatch" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Importain Points to Note"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />

    <TextView
        android:id="@+id/tvDesciprtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="By clicking this button your time start coutting"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view" />

    <Button
        android:layout_marginBottom="@dimen/span8"
        android:id="@+id/btnStarContest"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@color/red"
        android:text="John Contest"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDesciprtion"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view" />

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_margin="8dp"
        android:background="@drawable/circle_red_shape"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/tvNote" />

    <TextView
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/span8"
        android:gravity="left"
        android:text="This contest has 5 question in all which must all be attempted"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvOne"
        app:layout_constraintLeft_toRightOf="@id/tvOne"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/tvOne" />

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_margin="8dp"
        android:background="@drawable/circle_red_shape"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/tvOne" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/span8"
        android:gravity="left"
        android:text="All 5 questions must be answer within 5 minutes"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvTwo"
        app:layout_constraintLeft_toRightOf="@id/tvTwo"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/tvTwo" />

    <TextView
        android:id="@+id/tvThree"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_margin="8dp"
        android:background="@drawable/circle_red_shape"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/tvTwo" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/span8"
        android:gravity="left"
        android:text="Once you selected an answer and click next. You can not modify you answer again."
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvThree"
        app:layout_constraintLeft_toRightOf="@id/tvThree"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/tvThree" />

    <TextView
        android:id="@+id/tvFour"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_margin="8dp"
        android:background="@drawable/circle_red_shape"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/tvThree" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/span8"
        android:gravity="left"
        android:text="All questions may not carry the same mark which means that answers 3 out of 5questions correctly may or may not give you 50% of the accruable points."
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tvFour"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/tvFour" />


