<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:id="@+id/lnlLayout"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHightlight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="hightlight"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvCommentary"
            app:layout_constraintTop_toTopOf="@id/view" />

        <TextView
            android:id="@+id/tvCommentary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="commentary"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintLeft_toRightOf="@id/tvHightlight"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvTimeline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/span16"
        android:layout_marginLeft="@dimen/span16"
        android:layout_marginRight="@dimen/span16"
        android:layout_marginTop="@dimen/span16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlLayout">


    </android.support.v7.widget.RecyclerView>

    <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
        android:id="@+id/txtNotDataTimeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_timeline_avaiable"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/font_size_body"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>