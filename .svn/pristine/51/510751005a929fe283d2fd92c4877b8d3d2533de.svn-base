<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:id="@+id/ll_rank_club"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_rank_clubs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:gravity="left|center_vertical"
            android:text="1"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <!--<ImageView-->
        <!--android:id="@+id/img_logoClub"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="@dimen/margin_horizontal_xlarge"-->
        <!--android:layout_gravity="center_vertical|left"-->
        <!--android:layout_weight="1.5"-->
        <!--android:contentDescription="@string/text_team"-->
        <!--android:paddingBottom="@dimen/padding_small"-->
        <!--android:paddingTop="@dimen/padding_small"-->
        <!--android:src="@mipmap/ic_launcher" />-->

        <TextView
            android:id="@+id/lbl_name_clubs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingTop="@dimen/padding_item_rank"
            android:paddingBottom="@dimen/padding_item_rank"
            android:paddingRight="@dimen/padding_vertical"
            android:singleLine="true"
            android:text="Chelsea"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/lbl_value_p"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/lbl_value_w"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/lbl_value_d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/lbl_value_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/lbl_value_gd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/lbl_value_pts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_divider"
        android:visibility="gone" />

</RelativeLayout>