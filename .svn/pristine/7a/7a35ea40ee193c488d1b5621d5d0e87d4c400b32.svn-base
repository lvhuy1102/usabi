<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newsCardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_layout"
        android:layout_marginRight="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_item"
        android:layout_marginBottom="@dimen/margin_item"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="4dp"
        card_view:cardCornerRadius="@dimen/span4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_news"
                android:layout_width="fill_parent"
                android:layout_height="155dp"
                android:scaleType="fitXY"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_left_top_corner_radius="@dimen/span4"
                app:sriv_right_bottom_corner_radius="0dp"
                app:sriv_right_top_corner_radius="@dimen/span4" />


            <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
                android:id="@+id/lbl_news_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/span16"
                android:layout_marginRight="@dimen/span16"
                android:layout_marginTop="@dimen/span8"
                android:text="Title"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_size_16" />

            <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
                android:id="@+id/lbl_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/span16"
                android:layout_marginRight="@dimen/span16"
                android:layout_marginTop="@dimen/span4"
                android:text="Des"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_size_caption" />

            <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
                android:id="@+id/lbl_news_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/font_size_16"
                android:layout_marginLeft="@dimen/span16"
                android:layout_marginRight="@dimen/span16"
                android:layout_marginTop="@dimen/span4"
                android:gravity="right"
                android:text="22/12"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/span12" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>