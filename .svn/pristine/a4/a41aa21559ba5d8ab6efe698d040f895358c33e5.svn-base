<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/span36">

    <ImageView
        android:id="@+id/imgTimelineItem"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/timline_middle" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/span10"
        android:layout_toLeftOf="@+id/imgTimelineItem"
        android:orientation="horizontal">

        <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
            android:id="@+id/txtPlayerTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/span16"
            android:layout_weight="1"
            android:gravity="right"
            android:text="player AAAAAAAA"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/font_size_caption"
            android:visibility="invisible">


        </com.hcpt.multileagues.widget.textview.TextViewRobotoRegular>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
                android:id="@+id/txtTimeTeam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_size_caption"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgEventTeam1"
                android:layout_width="@dimen/span16"
                android:layout_height="@dimen/span16"
                android:src="@mipmap/yellow"
                android:visibility="invisible" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/span10"
        android:layout_toRightOf="@+id/imgTimelineItem"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/span10">

            <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
                android:id="@+id/txtTimeTeam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_size_caption"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgEventTeam2"
                android:layout_width="@dimen/span16"
                android:layout_height="@dimen/span16"
                android:visibility="invisible" />

        </RelativeLayout>

        <com.hcpt.multileagues.widget.textview.TextViewRobotoRegular
            android:id="@+id/txtPlayerTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/span16"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/font_size_caption">


        </com.hcpt.multileagues.widget.textview.TextViewRobotoRegular>


    </LinearLayout>

</RelativeLayout>
