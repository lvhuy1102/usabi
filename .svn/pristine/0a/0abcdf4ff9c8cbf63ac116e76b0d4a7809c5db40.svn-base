<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fr_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_main">

    <com.hcpt.multileagues.sticky.StickyListHeadersListView
        android:id="@+id/lv_matchs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lbl_no_data"
        android:layout_toRightOf="@+id/lbl_no_data"
        android:clipToPadding="false"
        android:divider="@color/tranparent"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="true"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/margin_item"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/lbl_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_vertical"
        android:singleLine="true"
        android:text="@string/no_match_found"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

</RelativeLayout>