<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Custom action bar -->
    <style name="MyActionBar" parent="">
        <item name="background">@color/background_tab</item>
        <item name="android:background">@color/background_tab</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:checkboxStyle">@style/CheckBoxTheme</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <!-- CheckBox-->
    <style name="CheckBoxTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:checkboxStyle">@drawable/checkbox_selector</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="MyCustomTabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">none</item>
        <item name="textAllCaps">false</item>
        <item name="android:icon">@drawable/ic_drawer</item>
    </style>

    <style name="My.Tab.Style" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/MyCustomTabTextStyle</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabBarStyle">@style/customTabBar</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/My.Tab.Style</item>
        <item name="actionBarTabTextStyle">@style/My.Tab.Style</item>
    </style>

    <!-- Spinners style -->
    <style name="spinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
    </style>

    <style name="customTabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@color/gray</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="android:background">@drawable/bg_tab_unselected</item>
    </style>

    <style name="CustomMainTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_tabs_main</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>

    </style>


    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_tabs</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <dimen name="text_size_tabs_main">13sp</dimen>
    <dimen name="text_size_tabs">14sp</dimen>
</resources>