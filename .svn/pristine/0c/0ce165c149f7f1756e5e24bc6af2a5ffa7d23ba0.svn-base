<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lbl_bookmarker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_vertical"
        android:paddingTop="@dimen/margin_vertical"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/lbl_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_vertical"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/lbl_draw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_vertical"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/lbl_away"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_vertical"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_vertical"
        android:text="@string/view"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>
