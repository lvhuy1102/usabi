<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/fr_timeline_notstarted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_alarm"
            android:layout_width="@dimen/ic_normal_logo"
            android:layout_height="@dimen/ic_normal_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:background="@drawable/ic_alarm"
            android:contentDescription="@string/image_desc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal">

            <TextView
                android:id="@+id/lbl_date_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Fri, 08/15"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/lbl_time_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="14:30"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_large" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:background="@color/yellow_dark"
            android:orientation="vertical"
            android:padding="@dimen/padding_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_vertical_large"
                android:paddingTop="@dimen/padding_vertical_large">

                <LinearLayout
                    android:id="@+id/ll_home_club"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_name_team1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Arsenal"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_scores_timeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- : -"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_score" />

                    <TextView
                        android:id="@+id/lbl_stadium_timeline"
                        android:layout_width="@dimen/width_logo_section"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:singleLine="true"
                        android:text="Emirates"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/ll_away_club"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_name_team2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Aston Villa"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_title" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_ball" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_goal"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_yellow_card" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_yellow_card"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_red_card" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_red_card"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_penalty" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_penalty"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_own_goal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_own_goal"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_arrow_up" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_in"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_tiny_logo"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_arrow_down" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/text_out"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_reminder_ontime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    android:text="@string/text_remider_on_time"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/lbl_reminder_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    android:text="@string/text_remider_15"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/lbl_reminder_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    android:text="@string/text_remider_30"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/lbl_reminder_60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_vertical"
                    android:text="@string/text_remider_60"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>